<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/your_color">

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="356dp"
        android:layout_height="423dp"
        android:layout_marginTop="33dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:srcCompat="@drawable/inteface2" />

    <Button
        android:id="@+id/button3"
        android:layout_width="255dp"
        android:layout_height="40dp"
        android:backgroundTint="#00FFFFFF"
        android:gravity="center|top"
        android:text="Вернуться к списку курсов"
        android:textColor="@color/your_color_accent"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button6" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="sans-serif-black"
        android:text="Тесты для 1 курса:"
        android:textColor="@color/your_color"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/matembutton"
        app:layout_constraintStart_toStartOf="@+id/matembutton"
        app:layout_constraintTop_toTopOf="@+id/imageView17" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="85dp"
        android:layout_height="72dp"
        android:layout_marginStart="154dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="154dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon2" />

    <Button
        android:id="@+id/matembutton"
        android:layout_width="246dp"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/your_color_accent"
        android:fontFamily="sans-serif-black"
        android:text="Высшая математика"
        android:textColor="@color/your_color"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/russianButton"
        app:layout_constraintStart_toStartOf="@+id/russianButton"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/russianButton"
        android:layout_width="246dp"
        android:layout_height="47dp"
        android:backgroundTint="@color/your_color_accent"
        android:fontFamily="sans-serif-black"
        android:text="Русский язык"
        android:textColor="@color/your_color"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/pascalButton"
        app:layout_constraintStart_toStartOf="@+id/pascalButton"
        app:layout_constraintTop_toBottomOf="@+id/matembutton" />

    <Button
        android:id="@+id/pascalButton"
        android:layout_width="246dp"
        android:layout_height="47dp"
        android:layout_marginBottom="144dp"
        android:backgroundTint="@color/your_color_accent"
        android:fontFamily="sans-serif-black"
        android:text="Основы &quot;Паскаль&quot;"
        android:textColor="@color/your_color"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView17"
        app:layout_constraintEnd_toEndOf="@+id/engButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/engButton"
        app:layout_constraintTop_toBottomOf="@+id/russianButton"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/engButton"
        android:layout_width="246dp"
        android:layout_height="47dp"
        android:backgroundTint="@color/your_color_accent"
        android:fontFamily="sans-serif-black"
        android:text="Английский язык"
        android:textColor="@color/your_color"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView17"
        app:layout_constraintStart_toStartOf="@+id/imageView17"
        app:layout_constraintTop_toBottomOf="@+id/pascalButton" />

    <Button
        android:id="@+id/exitButton"
        android:layout_width="246dp"
        android:layout_height="47dp"
        android:layout_marginTop="376dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#00FFFFFF"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Выйти из приложения"
        android:textColor="@color/your_color_accent"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/russianButton" />

    <Button
        android:id="@+id/button6"
        android:layout_width="246dp"
        android:layout_height="47dp"
        android:layout_marginTop="-65dp"
        android:backgroundTint="@color/your_color_dark"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Результаты последнего теста"
        android:textColor="@color/your_color"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView17" />

</androidx.constraintlayout.widget.ConstraintLayout>