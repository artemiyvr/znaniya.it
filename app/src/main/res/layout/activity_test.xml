<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navigation_bar_color"
    android:backgroundTint="@color/navigation_bar_color"
    android:padding="16dp">

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="85dp"
            android:layout_height="72dp"
            android:layout_marginStart="154dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="154dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon2" />

        <TextView
            android:id="@+id/questionTextView1"
            android:layout_width="343dp"
            android:layout_height="38dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="148dp"
            android:layout_marginEnd="9dp"
            android:gravity="center|top"
            android:textColor="@color/your_color_accent"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView14" />

        <Button
            android:id="@+id/option1Button1"
            android:layout_width="355dp"
            android:layout_height="53dp"
            android:layout_marginTop="19dp"
            android:backgroundTint="@color/your_color_accent"
            android:textColor="@color/your_color"
            app:layout_constraintEnd_toEndOf="@+id/option2Button1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/option2Button1"
            app:layout_constraintTop_toBottomOf="@+id/questionTextView1" />

        <Button
            android:id="@+id/option2Button1"
            android:layout_width="355dp"
            android:layout_height="53dp"
            android:backgroundTint="@color/your_color_accent"
            android:textColor="@color/navigation_bar_color"
            app:layout_constraintEnd_toEndOf="@+id/option3Button1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/option3Button1"
            app:layout_constraintTop_toBottomOf="@+id/option1Button1" />

        <Button
            android:id="@+id/option3Button1"
            android:layout_width="355dp"
            android:layout_height="53dp"
            android:backgroundTint="@color/your_color_accent"
            android:textColor="@color/navigation_bar_color"
            app:layout_constraintEnd_toEndOf="@+id/option4Button1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/option4Button1"
            app:layout_constraintTop_toBottomOf="@+id/option2Button1" />

        <Button
            android:id="@+id/option4Button1"
            android:layout_width="355dp"
            android:layout_height="53dp"
            android:backgroundTint="@color/your_color_accent"
            android:textColor="@color/navigation_bar_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.131"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/option3Button1" />

        <TextView
            android:id="@+id/timerTextView1"
            android:layout_width="116dp"
            android:layout_height="34dp"
            android:layout_marginTop="110dp"
            android:gravity="bottom|center"
            android:textColor="@color/your_color_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/questionTextView1"
            app:layout_constraintStart_toStartOf="@+id/questionTextView1"
            app:layout_constraintTop_toBottomOf="@+id/imageView14" />

        <Button
            android:id="@+id/button4"
            android:layout_width="307dp"
            android:layout_height="40dp"
            android:layout_marginTop="209dp"
            android:backgroundTint="#00FFFFFF"
            android:text="Отказаться от прохождения теста"
            android:textColor="@color/your_color_accent"
            app:layout_constraintEnd_toEndOf="@+id/option4Button1"
            app:layout_constraintHorizontal_bias="0.541"
            app:layout_constraintStart_toStartOf="@+id/option4Button1"
            app:layout_constraintTop_toBottomOf="@+id/option4Button1" />

</androidx.constraintlayout.widget.ConstraintLayout>
